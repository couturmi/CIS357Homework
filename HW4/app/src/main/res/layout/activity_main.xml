<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="couturier_crowe.android.hw4.MainActivity">

    <EditText
        android:id="@+id/longitudep1"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="174dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Enter longitude for p1"
        android:inputType="numberDecimal"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/longitudep2"
        app:layout_constraintLeft_toRightOf="@+id/latitudep1"
        android:layout_marginLeft="8dp" />

    <EditText
        android:id="@+id/longitudep2"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="174dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Enter longitude for p1"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/latitudep2"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/clearButton" />

    <EditText
        android:id="@+id/latitudep1"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="174dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Enter latitude for p1"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/latitudep2" />

    <EditText
        android:id="@+id/latitudep2"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="174dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Enter latitude for p2"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/calculateButton" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATE"
        app:layout_constraintRight_toLeftOf="@+id/clearButton"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/distanceText" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="122dp" />

    <TextView
        android:id="@+id/bearingText"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bearing:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="207dp" />

    <TextView
        android:id="@+id/distanceText"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance:"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/bearingText" />

</android.support.constraint.ConstraintLayout>
